# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_size = 2
insert_final_newline = true
indent_style = space

trim_trailing_whitespace = true

[*.ts]
indent_style = space
quote_type = single
ij_typescript_use_double_quotes = false

[*.md]
max_line_length = off
trim_trailing_whitespace = false

space_in_empty_paren = false
